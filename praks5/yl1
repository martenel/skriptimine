#!/bin/bash
#
#kolmnurga arvuamine
echo -n "Sisesta a kylje vaartus:"
read kylga
echo -n "Sisesta b kylje vaartus:"
read kylgb
pool=$(echo "$kylga^2" | bc) #esimese k체lje panen ruutu
pool2=$(echo "$kylgb^2" | bc) #teise k체lje panen ruutu
kokku=$(echo "$pool+$pool2" | bc) #liidan k체ljed kokku
vastus=$(echo "scale=3;sqrt($kokku)" | bc) #v천tan ruutjuure
echo "$vastus"
